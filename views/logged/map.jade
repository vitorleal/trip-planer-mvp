extends ../layout-map

block append head
	script(src='https://maps.google.com/maps/api/js?key=AIzaSyCABzxHhmqMf_Ty8MzdGeDfD1JPK482cNE&sensor=false')
	script(src='/javascripts/map.js')

block modal

block content
	#side-map.side-map
		h2 Your trip
		p= destination.city.name + " - " + destination.country.name
		p= date(trip.date)
		p= trip.days
		p= trip.intensity
	#map(data-lat=destination.city.geoLocation.lat, data-lng=destination.city.geoLocation.lng)= user.name

block footer