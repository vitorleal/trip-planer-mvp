extends ../layout-map

block append head
    script(src='https://maps.google.com/maps/api/js?&libraries=places&key=AIzaSyCABzxHhmqMf_Ty8MzdGeDfD1JPK482cNE&sensor=false')
    script(src='/javascripts/map.js')

block modal

block content
    #side-map.side-map
        .side-map-content
            h2= destination.city.name + " - " + destination.country.name
            p.trip-infos
                strong.mt Date
                span= date(trip.date)

                strong.mt Days
                span.trip-days= trip.days

                strong.mt Intensity
                span= trip.intensity

        .days
            - for (var i = 0, len = trip.days; i < len; i++) {
                a.btn.btn-info.btn-small(href="#", data-day=i): <i class="icon-calendar icon-white"></i> Day #{i+1}
            - }

        ol#days-plan

        #showInfo
            h2.title
            p.address
            p.rate

        #users
            h4 Contact your friends in #{destination.city.name}

    #map(data-lat=destination.city.geoLocation.lat, data-lng=destination.city.geoLocation.lng)

block footer