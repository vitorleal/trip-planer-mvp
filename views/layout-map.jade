                                    li
                                        a(href="#"): <i class="icon-print icon-blue i-mr"></i> #{__('print your trip')}

                                    li
                                        a(href="#"): <i class="icon-hdd icon-blue i-mr"></i> #{__('save your trip')}

                                    li.divider

                                    li
